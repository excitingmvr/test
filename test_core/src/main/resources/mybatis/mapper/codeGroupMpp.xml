        #{codeGroupSeq},
        #{codeGroupName},
        #{codeGroupNameEng},
        #{codeGroupUseNy},
        #{codeGroupDelNy},
        #{codeGroupRegdate},
        #{codeGroupUpdate}
        )
    </insert>

